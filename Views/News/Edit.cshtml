@model Test.Models.News

@{
    ViewData["Title"] = "Edit";
}

<div class="card p-3" style="display:grid;justify-content:center ; margin:100px; height:600px; box-shadow:5px 5px 5px 5px  #87CEEB ; border-radius:15px">
    <h1 class="text-center" style="color:#414141">Edit @Model.Title News</h1>
    <hr />
    <form asp-action="Edit" enctype="multipart/form-data"> 
        <div class="form-group mb-2" >
            <input asp-for="Title" style="font-size:14px; color:black; text-align:center;border: 1px solid #1f1f1f ; border-radius : 10px; 
            outline:none ; box-shadow:none; height:40px " class="form-control" placeholder="Enter Title"/>
            <span asp-validation-for="Title" class="text-danger"  style="font-size:12px;"></span>
        </div>
        <div class="form-group mb-2" >
            <input asp-for="ContentOfPost"  style="font-size:14px;  color:black; 
            text-align:center;border: 1px solid #1f1f1f ; border-radius : 10px; 
            outline:none ; box-shadow:none; height:40px " class="form-control" placeholder="Enter Content"/>
            <span asp-validation-for="ContentOfPost" class="text-danger"  style="font-size:12px;"></span>
        </div>
       
        <div class="form-group mb-2">
            <input asp-for="image" type="file" name="photo" style="font-size:14px;  color:black; 
            text-align:center;border: 1px solid #1f1f1f ; border-radius : 10px; 
            outline:none ; box-shadow:none; height:40px " class="form-control"/>
            <span asp-validation-for="image" class="text-danger"  style="font-size:12px;"></span>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Edit Now!" class="btn btn-primary"/> 
        </div>
    </form>
</div>



