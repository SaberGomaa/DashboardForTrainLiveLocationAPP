@model Test.Models.Station

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card p-3" style="display:grid;justify-content:center ; margin:100px; height:600px; box-shadow:5px 5px 5px 5px  #87CEEB ; border-radius:15px">
    <h1 class="text-center" style="color:#414141">Add New Station</h1>
    <hr />
    <form asp-action="create" enctype="multipart/form-data" >
        <div class="form-group mb-2" >
            <input asp-for="Name" style="font-size:14px; color:black; text-align:center;border: 1px solid #1f1f1f ; border-radius : 10px; 
            outline:none ; box-shadow:none; height:40px " class="form-control" placeholder="Enter Station Name"/>
            <span asp-validation-for="Name" class="text-danger"  style="font-size:12px;"></span>
        </div>
           <div class="form-group mb-2" >
            <input asp-for="NextStation" style="font-size:14px; color:black; 
            text-align:center;border: 1px solid #1f1f1f ; border-radius : 10px; 
            outline:none ; box-shadow:none; height:40px " class="form-control" placeholder="Enter Next Station"/>
            <span asp-validation-for="NextStation" class="text-danger"  style="font-size:12px;"></span>
        </div>
        <div class="form-group mb-2" >
            <input asp-for="Description" style="font-size:14px; color:black;
            text-align:center;border: 1px solid #1f1f1f ; border-radius : 10px;  outline:none ;
            box-shadow:none; height:40px " class="form-control" placeholder="Enter Description For Station"/>
            <span asp-validation-for="Description" class="text-danger"  style="font-size:12px;"></span>
        </div>
       <div class="form-group mb-2" >
            <input asp-for="Longitude" style="font-size:14px; color:black;
            text-align:center;border: 1px solid #1f1f1f ; border-radius : 10px;  outline:none ;
            box-shadow:none; height:40px " class="form-control" placeholder="Enter Longitude"/>
            <span asp-validation-for="Longitude" class="text-danger"  style="font-size:12px;"></span>
        </div>
        <div class="form-group mb-2" >
            <input asp-for="Latitude" style="font-size:14px; color:black;
            text-align:center;border: 1px solid #1f1f1f ; border-radius : 10px;  outline:none ;
            box-shadow:none; height:40px " class="form-control" placeholder="Enter Latitude"/>
            <span asp-validation-for="Latitude" class="text-danger"  style="font-size:12px;"></span>
        </div>
        <div class="form-group mb-2" >
            <input asp-for="Position" style="font-size:14px; color:black;
            text-align:center;border: 1px solid #1f1f1f ; border-radius : 10px;  outline:none ;
            box-shadow:none; height:40px " class="form-control" placeholder="Enter Postion"/>
            <span asp-validation-for="Position" class="text-danger"  style="font-size:12px;"></span>
        </div>
       @* <div class="form-group mb-2" >
            <label asp-for="TrainId" class="control-label"></label>
            <select asp-for="TrainId" class="form-control">
                @foreach(var i in ViewBag.Trains)
                {
                    <option>@i</option>
                }
            </select>
            <span asp-validation-for="TrainId" class="text-danger"></span>
        </div>*@
       
        <div class="form-group text-center">
            <input type="submit" value="Add Now!" class="btn btn-primary"/> 
        </div>
    </form>
</div>