                {
                    <option>@i</option>
                }
            </select>
            <span asp-validation-for="TrainId" class="text-danger"></span>
        </div>*@
        <div class="form-group mb-2" >
            <select asp-for="RailwayId" asp-items="@ViewBag.Railways" class="form-control"></select>
            <span asp-validation-for="RailwayId" class="text-danger"  style="font-size:12px;"></span>
            </div>
        <div class="form-group text-center">
            <input type="submit" value="Edit Now!" class="btn btn-primary"/> 
        </div>
    </form>
</div>

